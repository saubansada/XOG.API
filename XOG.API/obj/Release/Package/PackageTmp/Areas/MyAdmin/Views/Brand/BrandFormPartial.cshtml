@model XOG.Areas.MyAdmin.Models.ViewModels.BrandAdminModel

<div class="uk-width-3-5@m uk-align-center">
    <hr />
    <div class="uk-card">
        <div uk-grid class="uk-grid uk-child-width-1-2@m uk-child-width-1-1@s">
            <div>
                <div class="uk-margin">
                    @Html.LabelFor(model => model.BrandName, htmlAttributes: new { @class = "uk-form-label" })
                    <div class="uk-form-controls">
                        @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "uk-input" } })
                        @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "uk-text-danger" })
                    </div>
                </div>
            </div>
            <div>
                <div class="uk-margin">
                    @Html.LabelFor(model => model.BrandUrl, htmlAttributes: new { @class = "uk-form-label" })
                    <div class="uk-form-controls">
                        @Html.EditorFor(model => model.BrandUrl, new { htmlAttributes = new { @class = "uk-input" } })
                        @Html.ValidationMessageFor(model => model.BrandUrl, "", new { @class = "uk-text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-margin">
            @Html.LabelFor(model => model.BrandDescription, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.BrandDescription, new { htmlAttributes = new { @class = "uk-input autogrow", rows = "4", style = "min-width:100%; min-height:150px;" } })
                @Html.ValidationMessageFor(model => model.BrandDescription, "", new { @class = "uk-text-danger" })
            </div>
        </div>

    </div>
    <hr />
</div> 