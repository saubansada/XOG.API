@model XOG.Areas.MyAdmin.Models.ViewModels.SubCategoryAdminModel

<div class="uk-width-3-5@m uk-align-center">
    <hr />
    <div class="uk-card">
        <div class="uk-card">
            <div uk-grid class="uk-grid uk-child-width-1-2@m uk-child-width-1-1@s">
                <div>

                    <div class="uk-margin">
                        @Html.LabelFor(model => model.SubCategoryName, htmlAttributes: new { @class = "uk-form-label" })
                        <div class="uk-form-controls">
                            @Html.EditorFor(model => model.SubCategoryName, new { htmlAttributes = new { @class = "uk-input" } })
                            @Html.ValidationMessageFor(model => model.SubCategoryName, "", new { @class = "uk-text-danger" })
                        </div>
                    </div>

                </div>
                <div>

                    <div class="uk-margin">
                        @Html.LabelFor(model => model.CategoryId, htmlAttributes: new { @class = "uk-form-label" })
                        <span class="uk-float-right"><a href="@Url.Action("Add","Category")">add new</a></span>
                        <div class="uk-form-controls">
                            @Html.DropDownListFor(m => m.CategoryId, Model.CategoryList, new { @class = "uk-select" })
                            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "uk-text-danger" })
                        </div>
                    </div>
                </div>

            </div>
            <div class="uk-margin">
                @Html.LabelFor(model => model.SubCategoryDescription, htmlAttributes: new { @class = "uk-form-label" })
                <div class="uk-form-controls">
                    @Html.EditorFor(model => model.SubCategoryDescription, new { htmlAttributes = new { @class = "uk-input autogrow", rows = "4", style = "min-width:100%; min-height:150px;" } })
                    @Html.ValidationMessageFor(model => model.SubCategoryDescription, "", new { @class = "uk-text-danger" })
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>