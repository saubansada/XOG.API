@model XOG.Areas.MyAdmin.Models.ViewModels.ProductAdminVM

@{
    ViewBag.Title = "Add Product"; 
}
@using (Html.BeginForm("Add", "Product", new { area = "Admin" }, FormMethod.Post, new { id = "ProductAddForm" }))
{
    <div>
        @Html.AntiForgeryToken()

        <h3 class="uk-margin-remove-top">Add Product</h3>

        @Html.Partial("ProductFormPartial", Model)

        <div uk-grid class="uk-child-width-1-2@m">
            <div class="uk-flex-last">
                <div class="uk-margin-medium uk-align-right@m">
                    <input type="submit" value="Add Product" class="uk-button uk-button-default" />
                </div>
            </div>
            <div>
                <a class="uk-button-link uk-link-no-underline" href="@Url.Action("Index","Product", new { area = "Admin" })"><span uk-icon="arrow-left"></span> Back to List</a>
            </div>
        </div>
    </div>
}
<br />

@section Scripts{

    <script>
        $(document).ready(function () {

            initProductImageUpload("#ProductAddForm");
             
            initDependentDropdowns(true); 

        });


    </script>

}
