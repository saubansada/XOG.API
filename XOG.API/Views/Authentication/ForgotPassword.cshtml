@model XOG.Models.ViewModels.Authentication.ForgotPasswordViewModel
@{
    ViewBag.Title = Language("ForgotYourPassword?");
    Theme = "UserTheme";
}

<div class="content">
    <div class="content-title">
        <div class="content-title-inner">
            <div class="container">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-4">
                    @using (Html.BeginForm("ForgotPassword", "Authentication", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group" @Direction>
                                    <label>@Language("Email")</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control ltr" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group-btn">
                                    <input type="submit" class="btn btn-info" value="@Language("EmailPasswordResetLink")" />
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row">
                        @Html.ValidationSummary(true)
                    </div>
                    <div class="form-group-bottom-link">
                        <a href="@Url.Action("Login", "Authentication")"><i class="fa fa-long-arrow-left"></i> @Language("BackToLoginPage") </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
