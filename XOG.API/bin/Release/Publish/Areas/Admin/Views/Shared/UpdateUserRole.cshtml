
@using XOG.Util;
@using XOG.Areas.Admin.Models.ViewModels;

@model XOG.Areas.Admin.Models.JsonModels.UpdateUserRoleModel


<div id="UpdateRoleDialogForm" class="uk-card-default" style="padding:20px">
    <h4>Edit User's Role</h4>
    @Html.AntiForgeryToken()
    @{
        var user = (UserAdminModel)Model.ContentModel;
        <text>
            Email :  @user.Email
            <br />
            Name : @user.FirstName&nbsp;@user.LastName
        </text>
        <br />
        <label for="Role">Roles : </label>
        <div>

            @foreach (var item in Model.UserRoles)
            {
                <label><input id="@item.Text-checkbox" data-role-id="@item.Text" class="uk-checkbox" type="checkbox" checked="@item.Selected"> @item.Text</label>
                <br />
            }
        </div>
        @*@Html.DropDownListFor(model => model.Role, Model.UserRoles, new { @class = "uk-select uk-form-small" }) <br />*@

    }
    <hr />
    <div class="uk-margin-small-bottom">
        <div class="form-actions no-color pull-right">
            <input id="updateBtn" type="button" value="Update" class="uk-button uk-button-danger" />
            <input id="closeBtn" type="button" value="Cancel" class="uk-button uk-button-primary" />
        </div>
        <br />
    </div>
</div>
