@using XOG.Util;
@using XOG.Areas.Admin.Models.ViewModels;

@model XOG.Areas.Admin.Models.JsonModels.DeleteModel


<div id="DeleteDialogForm" class="uk-card-default" style="padding:20px">
    <h4>Are you sure you want to delete this @Model.Type.ToString().ToFriendlyCase().ToLower()?</h4> 
    @Html.AntiForgeryToken()


    @if (Model.Type == RecordType.Product)
    {
        var product = (ProductAdminModel)Model.contentModel;     
        <text>
               Name :  @product.ProductName
        </text>
    }
    @if (Model.Type == RecordType.Category)
    {
        var category = (CategoryAdminModel)Model.contentModel;
        <text>
            Name :  @category.CategoryName
        </text>
    }
    @if (Model.Type == RecordType.SubCategory)
    {
        var subCategory = (SubCategoryAdminModel)Model.contentModel;
        <text>
            Name :  @subCategory.SubCategoryName
        </text> 
    } 
    <hr />
    <div class="uk-margin-small-bottom">
        <div class="form-actions no-color pull-right">
            <input id="deleteBtn" type="button" value="Delete" class="uk-button uk-button-danger" />
            <input id="closeBtn" type="button" value="Cancel" class="uk-button uk-button-primary" />
        </div>
        <br />
    </div>
</div>
 