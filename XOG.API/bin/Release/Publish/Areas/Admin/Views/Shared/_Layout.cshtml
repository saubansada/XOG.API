                    UIkit.offcanvas("#my_canvas").hide();
                    $("#offcanvas-content").removeClass("uk-offcanvas-padding");
                    localStorage.removeItem("canvasClass");
                }
                else {
                    UIkit.offcanvas("#my_canvas").show();
                    $("#offcanvas-content").addClass("uk-offcanvas-padding");
                    localStorage.setItem("canvasClass", ["uk-open", "uk-display-block"]);
                }
