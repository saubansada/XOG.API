@model XOG.Areas.Admin.Models.ViewModels.CategoryAdminVM

@{
    ViewBag.Title = "Add Category"; 
}
@using (Html.BeginForm("Add", "Category", new { area = "Admin" }, FormMethod.Post, new { id = "CategoryAddForm" }))
{
    <div>
        @Html.AntiForgeryToken()

        <h3 class="uk-width-3-5@m uk-align-center">Add Category</h3>

        @Html.Partial("CategoryFormPartial", Model)

        <div class="uk-width-3-5@m uk-align-center">
            <div class="uk-margin-medium uk-align-right@m uk-flex-last uk-margin-small-right">
                <input type="submit" value="Add Category" class="uk-button uk-button-default" />
            </div>
            <a class="uk-button-link uk-link-no-underline" href="@Url.Action("Index","Category", new { area = "Admin" })"><span uk-icon="arrow-left"></span> Back to List</a>
        </div>
    </div>
}
