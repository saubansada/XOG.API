@model XOG.Areas.Admin.Models.ViewModels.CategoryAdminVM

<div class="uk-width-3-5@m uk-align-center">
    <hr />
    <div class="uk-card">
        <div uk-grid class="uk-grid uk-child-width-1-2@m uk-child-width-1-1@s">
            <div>
                <div class="uk-margin">
                    @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "uk-form-label" })
                    <div class="uk-form-controls">
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "uk-input" } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "uk-text-danger" })
                    </div>
                </div>
            </div>
            <div>
                <div class="uk-margin">
                    @Html.LabelFor(model => model.ProductDivision, htmlAttributes: new { @class = "uk-form-label" })
                    <div class="uk-form-controls">
                        @Html.DropDownListFor(m => m.ProductDivision, Model.ProductDivisionList, new { @class = "uk-select" })
                        @Html.ValidationMessageFor(model => model.ProductDivision, "", new { @class = "uk-text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-margin">
            @Html.LabelFor(model => model.CategoryDescription, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.CategoryDescription, new { htmlAttributes = new { @class = "uk-input autogrow", rows = "4", style = "min-width:100%; min-height:150px;" } })
                @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "uk-text-danger" })
            </div>
        </div>
    </div>
    <hr />
</div> 